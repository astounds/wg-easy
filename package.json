{
  "version": "1.0.1",
  "scripts": {
    "build": "DOCKER_BUILDKIT=1 podman build --no-cache --tag rusian/wg-easy:test -f Dockerfile .",
    "serve": "docker-compose -f docker-compose.yml -f docker-compose.dev.yml up",
    "start": "podman run --rm --env WG_HOST=0.0.0.0 --name wg-easy --cap-add=NET_ADMIN --cap-add=SYS_MODULE --sysctl=\"net.ipv4.conf.all.src_valid_mark=1\" --mount type=bind,source=\"$(pwd)\"/config,target=/etc/wireguard -p 51820:51820/udp -p 51821:51821/tcp rusian/wg-easy:test",
    "all": "npm run build && npm start"
  }
}
